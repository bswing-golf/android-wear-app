<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".SwingNotStartedActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:padding="@dimen/inner_frame_layout_padding">

        <Button
            android:id="@+id/SELECTED_CLUB"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/select_club"
            android:textSize="16dp" />

        <Button
            android:id="@+id/START_SWING_BUTTON"
            android:layout_width="173dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:backgroundTint="#4CAF50"
            android:text="@string/start_swing"
            android:textSize="20dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/DO_NOT_DISTURB_TEXT"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/do_not_disturb_text"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            tools:visibility="gone" />

        <Button
            android:id="@+id/REFRESH_BUTTON"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Refresh"
            android:textColor="#2196F3"
            android:textSize="16dp"
            tools:visibility="gone" />

    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>