<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".SaveOrDiscardSwingActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:boxedEdges="all">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="@string/save_swing"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:background="@color/blue_a400"
            android:id="@+id/SAVE_SWING_BUTTON"
            android:layout_gravity="bottom|left"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_cc_checkmark" />

        <ImageButton
            android:background="@null"
            android:id="@+id/DISCARD_SWING_BUTTON"
            android:layout_gravity="bottom|right"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_full_cancel" />
</FrameLayout>
</androidx.wear.widget.BoxInsetLayout>